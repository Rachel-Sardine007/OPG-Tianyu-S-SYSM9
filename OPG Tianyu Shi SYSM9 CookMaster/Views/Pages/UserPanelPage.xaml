<Page x:Class="OPG_Tianyu_Shi_SYSM9_CookMaster.Views.Pages.UserPanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.Views.Pages" 
      xmlns:mvvm="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.MVVM" 
      xmlns:viewmodels="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.ViewModels" xmlns:managers="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.Managers"
      d:DataContext="{d:DesignInstance Type=managers:UserManager}"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="UserPanelPage">
 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <StackPanel Orientation="Horizontal">
            <Label Height="50" Width="100"/>
            <TextBlock Text="Welcome!" FontSize="20" Height="30"/>
            <TextBlock Text="{Binding CurrentUser}" FontSize="20" Height="30"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Width="70" Height="30" Content="Recipe List" Margin="10,10,10,10"/>
                <Button Width="70" Height="30" Content="Add Recipe" Margin=" 10,10,10,10"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2" >
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Width="70" Height="30" Content="User Details" Margin="10,10,10,10"/>
                <Button Width="70" Height="30" Content="Log out" Margin="10,10,10,10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
