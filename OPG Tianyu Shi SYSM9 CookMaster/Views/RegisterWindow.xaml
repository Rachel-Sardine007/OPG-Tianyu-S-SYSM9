<Window x:Class="OPG_Tianyu_Shi_SYSM9_CookMaster.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.Views"
        xmlns:viewmodels="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.ViewModels" 
d:DataContext="{d:DesignInstance Type=viewmodels:RegisterViewModel}"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="New User Register" FontSize="30" FontWeight="Medium"
                       TextAlignment="Center"/>
            <TextBlock Text="{Binding Error}" Foreground="Red" 
                       TextAlignment="Left" Width="200" Height="50"
                       TextWrapping="Wrap"/>
            <TextBlock Text="Username" TextAlignment="Left" Width="200"/>
            <TextBox Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    Margin ="0,5,0,5" Width="200" />
            <TextBlock Text="Password" TextAlignment="Left" Width="200"/>
            <PasswordBox x:Name="Pwd1" Margin="0,5,0,5" Width="200" PasswordChanged="Pwd1_PasswordChanged"/>
            <TextBlock Text="Confirm password" TextAlignment="Left" Width="200"/>
            <PasswordBox x:Name="Pwd2" Margin="0,5,0,5" Width="200" PasswordChanged="Pwd2_PasswordChanged"/>
            <TextBlock Text="Country" TextAlignment="Left" Width="200"/>
            <ComboBox x:Name="Cmb_Country" Height="20" Width="200" Margin="0,5,0,0"
                      ItemsSource="{Binding CountryList}"
                      DisplayMemberPath="Name"
                      SelectedValue="{Binding SelectedCountry, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!--button binding-->
            <Button x:Name="Btn_Register" Content="Register" Width="60" Margin="0,10,0,10" 
                    Command="{Binding RegisterCommand}"/>
            <Button x:Name="Btn_BackToMain" Content="Back" Width="60" Margin="0,0,0,0" 
                    Click="Btn_BackToMain_Click"/>
            <Image Source="C:\Mac\Home\Documents\Csharp101\Inluppg\OPG Tianyu Shi SYSM9 CookMaster\OPG Tianyu Shi SYSM9 CookMaster\Views\Pages\SplashImage.png"
                    Width="300" Height="90"/>
    </StackPanel>
    </ScrollViewer>
</Window>
