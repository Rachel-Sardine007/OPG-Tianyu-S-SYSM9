<Window x:Class="OPG_Tianyu_Shi_SYSM9_CookMaster.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.Views"
        xmlns:viewmodels="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.ViewModels" 
d:DataContext="{d:DesignInstance Type=viewmodels:RegisterViewModel}"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <ScrollViewer>
    <StackPanel Margin="20">
        <StackPanel.Resources>
        </StackPanel.Resources>
        
        <TextBlock Text="New User Register" FontSize="35" TextAlignment="Center"/>
        <TextBlock Text="{Binding Error}" Foreground="Red" TextAlignment="Left" Width="200" Height="30"/>
        <TextBlock Text="Username" TextAlignment="Left" Width="200"/>
        <TextBox Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                Margin ="0,5,0,10" Width="200" />
        <TextBlock Text="Password" TextAlignment="Left" Width="200"/>
        <PasswordBox x:Name="Pwd1" Margin="0,5,0,10" Width="200" PasswordChanged="Pwd1_PasswordChanged"/>
        <TextBlock Text="Enter password again" TextAlignment="Left" Width="200"/>
        <PasswordBox x:Name="Pwd2" Margin="0,5,0,10" Width="200" PasswordChanged="Pwd2_PasswordChanged"/>
        <TextBlock Text="Country" TextAlignment="Left" Width="200"/>
        <ComboBox x:Name="Cmb_Country" Height="20" Width="200" Margin="0,5,0,0"
                  ItemsSource="{Binding CountryList}"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Code"
                  SelectedValue="{Binding Country, Mode=TwoWay}"/>
        <!--button binding-->
        <Button x:Name="Btn_Register" Content="Register" Width="60" Margin="0,20,0,0" 
                Command="{Binding RegisterCommand}"/>
        <Button x:Name="Btn_BackToMain" Content="Back" Width="60" Margin="0,20,0,0" 
        Click="Btn_BackToMain_Click"/>
            <Label Width="300" Height="100" Margin="0,20,0,0"/>
    </StackPanel>
    </ScrollViewer>
</Window>
