<Window x:Class="OPG_Tianyu_Shi_SYSM9_CookMaster.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.Views"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="520" Width="930">

    <StackPanel Margin="20">
        <StackPanel.Resources>
        </StackPanel.Resources>
        <Label Width="300" Height="100" Margin="0,20,0,0"/>
        <TextBlock Text="New User Register" FontSize="35" TextAlignment="Center"/>
        <TextBlock Text="{Binding Error}" Foreground="Red" TextAlignment="Left"/>
        <TextBlock Text="Username" TextAlignment="Left" Width="200"/>
        <TextBox Text="{Binding Username, Mode=TwoWay}" Margin ="0,10,0,5" Width="200" />
        <TextBlock Text="Password" TextAlignment="Left" Width="200"/>
        <PasswordBox x:Name="Pwd1" Margin="0,10,0,10" Width="200" PasswordChanged="Pwd_PasswordChanged"/>
        <TextBlock Text="Enter password again" TextAlignment="Left" Width="200"/>
        <PasswordBox x:Name="Pwd2" Margin="0,10,0,10" Width="200" PasswordChanged="Pwd_PasswordChanged"/>
        <TextBlock Text="Country" TextAlignment="Left" Width="200"/>
        <ComboBox x:Name="Cmb_Country" Height="20" Width="200"/>
        <!--button binding-->
        <Button x:Name="Btn_Register" Content="Register" Width="50" Margin="0,20,0,0"/>
    </StackPanel>
</Window>
