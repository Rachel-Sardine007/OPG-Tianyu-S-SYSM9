<Window x:Class="OPG_Tianyu_Shi_SYSM9_CookMaster.Views.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.Views" 
        xmlns:managers="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.ViewModels" 
        d:DataContext="{d:DesignInstance Type=managers:UserDetailsViewModel}"
        mc:Ignorable="d"
        Title="UserDetailsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row ="0" Grid.Column="1" Grid.ColumnSpan="2">
            <StackPanel Orientation="Vertical" Margin="5">
                <Image Source="C:\Mac\Home\Documents\Csharp101\Inluppg\OPG Tianyu Shi SYSM9 CookMaster\OPG Tianyu Shi SYSM9 CookMaster\Views\Pages\SplashImage.png"
                    Width="200"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row ="1" Grid.Column="1">
            <StackPanel Margin=" 10">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Margin" Value="0,5,0,5"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Text="Username" />
                <TextBox x:Name="TxB_Username"
                    Text="{Binding Username}" IsEnabled="False"/>
                <TextBlock Text="Country"/>
                <ComboBox x:Name="CmB_Country" IsEnabled="False"
                    ItemsSource="{Binding CountryList}"
                    DisplayMemberPath="Name"
                    SelectedValuePath="Name"
                    SelectedValue="{Binding SelectedCountry.Name, Mode=TwoWay}"/>
                <Button x:Name="Btn_Edit" Click="Btn_Edit_Click"
                        Content="Edit" Width="90" Margin="0,30,0,0"/>
                <Button x:Name="Btn_Save" Command="{Binding SaveCommand}"
                        Content="Save" Width="90" Margin="0,10,0,0" Visibility="Hidden"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}"
                        Width="90" Margin="0,10,0,0" Grid.ColumnSpan="2"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="156*"/>
            </Grid.RowDefinitions>
            <StackPanel Margin="10,10,10,10" Grid.RowSpan="2">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Margin" Value="0,5,0,5"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Text="Current password"/>
                <PasswordBox x:Name="Pwb_Current" PasswordChanged="Pwb_Current_PasswordChanged"/>
                <TextBlock Text="New Password"/>
                <PasswordBox x:Name="Pwb_New" PasswordChanged="Pwb_New_PasswordChanged"/>
                <TextBlock Text="Confirm Password"/>
                <PasswordBox x:Name="Pwb_Confirm" PasswordChanged="Pwb_Confirm_PasswordChanged"/>
                <Button  Command="{Binding ChangePasswordCommand}"
                    Content="Change password" Width="150" HorizontalAlignment="Center" 
                    Margin="0,15,0,5"/>
                <TextBlock Text="{Binding Error}" Foreground="Red" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
