<Window x:Class="OPG_Tianyu_Shi_SYSM9_CookMaster.Views.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.Views" xmlns:viewmodels="clr-namespace:OPG_Tianyu_Shi_SYSM9_CookMaster.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:VerificationViewModel}"
        mc:Ignorable="d"
        Title="VerificationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter 6 digit verification code:" Margin="0,5,0,5"/>
            <TextBox Text="{Binding Code}" Margin="0,5,0,5"/>
            <TextBlock Text="{Binding Error, UpdateSourceTrigger=PropertyChanged}" 
                       Foreground="Red" Margin="0,0,0,5"/>
            <Button Content="Confirm" Margin="0,5,0,5"
                    Command="{Binding ConfirmCommand}"/>
        </StackPanel>
    </Grid>
</Window>
